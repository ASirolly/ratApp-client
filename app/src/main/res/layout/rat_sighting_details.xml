<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/logged_in_banner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/include"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="423dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/keyMarker"
                android:text="@string/unique_key"
            />

            <TextView
                android:id="@+id/keyValue"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/createDateMarker"
                android:text="@string/date_created"
                />

            <TextView
                android:id="@+id/createDateValue"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/locationTypeMarker"
                android:text="@string/location_type"
                />

            <TextView
                android:id="@+id/locationTypeValue"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/zipMarker"
                android:text="@string/zip_code"
                />

            <TextView
                android:id="@+id/zipValue"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/addressMarker"
                android:text="@string/address"
                />

            <TextView
                android:id="@+id/addressValue"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/cityMarker"
                android:text="@string/city"
                />

            <TextView
                android:id="@+id/cityValue"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/boroughMarker"
                android:text="@string/borough"
                />

            <TextView
                android:id="@+id/boroughValue"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/latitudeMarker"
                android:text="@string/latitude"
                />

            <TextView
                android:id="@+id/latitudeValue"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/longitudeMarker"
                android:text="@string/longitude"
                />

            <TextView
                android:id="@+id/longitudeValue"
                />

        </TableRow>
    </TableLayout>


</android.support.constraint.ConstraintLayout>